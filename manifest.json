{
    "name": "Gen build tag",
    "description": "Gen build tag",
    "version": "3.6.2",       
    "manifest_version": 3,
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "/images/icon.png",
            "32": "/images/icon.png",
            "48": "/images/icon.png",
            "128": "/images/icon.png"
          }
    },
    "icons": {
        "16": "/images/icon.png",
        "32": "/images/icon.png",
        "48": "/images/icon.png",
        "128": "/images/icon.png"
    },
    "permissions": [
        "storage"
    ],
    "content_scripts": [
        {
          "matches": [
            "https://gateway.zalopay.vn/*",
            "https://qcgateway.zalopay.vn/*",
            "https://devgateway.zalopay.vn/*",
            "http://localhost:3000/*"
        ],
          "js": ["zlp_gw_script.js"]
        },
        {
          "matches": [
            "https://gitlab.zalopay.vn/*"
        ],
          "js": ["zlp_gitlab_script.js"]
        }
      ]   
  }     
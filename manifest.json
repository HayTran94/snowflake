{
    "name": "Snowflake",
    "description": "Snowflake",
    "version": "1.1.2",       
    "manifest_version": 3,
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "/images/icon.png",
            "32": "/images/icon.png",
            "48": "/images/icon.png",
            "128": "/images/icon.png"
          }
    },
    "icons": {
        "16": "/images/icon.png",
        "32": "/images/icon.png",
        "48": "/images/icon.png",
        "128": "/images/icon.png"
    },
    "permissions": [
        "storage"
    ],
    "content_scripts": [
        {
          "matches": [
            "http://*/*",
            "https://*/*"
        ],
          "js": ["snowflake.js"]
        }
      ]
  }     